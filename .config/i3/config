# class					border  bg      text    indicator
client.focused_inactive $base00 $base00 $base03 $base00
client.focused			$base02 $base02 $base0D $base02
client.unfocused		$base00 $base00 $base03 $base00
client.urgent			$base0A $base0A $base07 $base0A

