#include ".colors/base16-chalk.dark.256.xresources"

!Xft.dpi: 220 
Xft.autohint: 0
Xft.antialias: true
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.lcdfilter: lcddefault
Xft.rgba: rgb
URxvt.transparent: true
URxvt.shading:20

!------------------------------------------------
!URxvt.font:  xft:EssentialPragmataPro:size=8
URxvt.font: xft:DejaVu Sans Mono:pixelsize=15
URxvt*saveLines: 300000
URxvt.scrollBar: false
!URxvt*scrollstyle: plain
URxvt*cursorBlink: true
!URxvt*cursorUnderline: true
URxvt.perl-ext-common:default,clipboard,color-themes
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.copycmd: xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

URxvt.color-themes.themedir:  ~/.colors
URxvt.color-themes.preprocessor: /usr/bin/cpp
URxvt.keysym.M-C-n:  perl:color-themes:next
URxvt.keysym.M-C-p:  perl:color-themes:prev

URxvt.color-themes.state-file: ~/.urxvt-theme
URxvt.color-themes.autosave: 1
URxvt.keysym.M-C-l:  perl:color-themes:load-state
URxvt.keysym.M-C-s:  perl:color-themes:save-state
  
